{
    "editor.renderControlCharacters": true, // 制御文字を表示する
    "files.insertFinalNewline": true, // ファイルの末尾を改行で終わらせる
    "editor.bracketPairColorization.enabled": true, // 括弧の対応を色付ける
    "workbench.startupEditor": "newUntitledFile",
    // pythonの環境設定
    "python.pythonPath": "/usr/bin/python3",
    "files.watcherExclude": {
        "**/venv/**": true
    },
    "python.analysis.extraPaths": [
        "./src"
    ],
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.flake8Args": [
        "--max-line-length",
        "88",
        "--ignore=E402,PT011,E501,E203,W503,W504",
        "--max-complexity",
        "10",
        "--max-expression-complexity",
        "7",
        "--max-cognitive-complexity",
        "8",
    ],
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnPaste": false,
        "editor.formatOnSaveMode": "file",
    },
    "editor.formatOnPaste": true,
    "autoDocstring.docstringFormat": "google",
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    // editor.wordSeparators: 単語単位での移動を行う場合の区切り文字を指定
    // 日本語文書で単語移動を使うため、助詞や読点、括弧を区切り文字として指定する
    "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?　、。「」【】『』（）！？てにをはがのともへでや",
    "git.ignoreLegacyWarning": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    // tabnenine
    "tabnine.experimentalAutoImports": true,
    // liveserver
    "liveServer.settings.donotVerifyTags": true,
    "launch": {},
    // for presentation mode
    "presentationMode.zoomLevel": 2,
    "zenMode.centerLayout": false,
    // for marp
    "markdown.marp.themes": [
        "/Users/yuchi/Documents/presentation/mystyle.css"
    ],
    "hediet.vscode-drawio.local-storage": "",
    "hediet.vscode-drawio.offline": false,
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "type": "line",
            "iconColour": "yellow",
            "foreground": "red",
            "background": "yellow"
        },
        "FIXME": {
            "icon": "beaker",
            "iconColour": "red",
            "foreground": "white",
            "background": "red"
        }
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "editor.formatOnSave": true,
    "python.languageServer": "Pylance",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "footsteps.doHighlightChanges": false,
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace, \"Roboto Mono for Powerline\", \"HackGen35Nerd Console\"",
    "editor.ruler": [
        88
    ],
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#272626",
        "editorRuler.foreground": "#ff4081"
    },
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    // rust
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
    },
    "http.systemCertificates": false,
    "docwriter.style": "Google",
    "window.zoomLevel": -1,
    "zenMode.hideLineNumbers": false,
    // 行数を相対表示
    "editor.lineNumbers": "relative",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    // カギ括弧をカラー表示
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
}
